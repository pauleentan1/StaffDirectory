<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StaffDirectory.Insert">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
            <Label>Name</Label>
            <Entry x:Name="NameInsert"  BackgroundColor="LightCoral" Placeholder="Name" />
            <Label>Position</Label>
            <Entry x:Name="PositionInsert" BackgroundColor="LightCoral" Placeholder="Position" />
            <Label>Department</Label>
            <Entry x:Name="DepartmentInsert" BackgroundColor="LightCoral" Placeholder="Department"></Entry>
            <Label>Phone</Label>
            <Entry x:Name="PhoneInsert" BackgroundColor="LightCoral" Placeholder="Phone"></Entry>
            <Label>Address</Label>
            <Entry x:Name="AddressInsert" BackgroundColor="LightCoral" Placeholder="Address"></Entry>

                <Button Clicked="Button_Clicked" BackgroundColor="LightCoral" Text="INSERT"></Button>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>