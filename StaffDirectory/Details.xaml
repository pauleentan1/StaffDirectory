<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StaffDirectory.Details">
    <ContentPage.Content>        
        <StackLayout>
            <Label x:Name="DetailsId">Loading...</Label>
            <Label x:Name="DetailsStaffName">Loading...</Label>
            <Entry x:Name="NameUpdate"  Placeholder="Name" />
            <Label x:Name="DetailsPosition">Loading...</Label>
            <Entry x:Name="PositionUpdate" Placeholder="Position" />
            <Label x:Name="DetailsDepartment">Loading...</Label>
            <Entry x:Name="DepartmentUpdated" Placeholder="DEPARTMENT" />

            <Button Clicked="Button_Clicked" Text="UPDATE"></Button>
            <Button Clicked="Button_Clicked_1" Text="DELETE"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>