<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StaffDirectory.Details">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
            <Label x:Name="DetailsId" >Loading...</Label>
            <Label x:Name="DetailsStaffName" >Loading...</Label>
            <Entry x:Name="NameUpdate"  BackgroundColor="LightCoral" Placeholder="Name" />
            <Label x:Name="DetailsPosition" >Loading...</Label>
            <Entry x:Name="PositionUpdate" BackgroundColor="LightCoral" Placeholder="Position" />
            <Label x:Name="DetailsPhone" >Loading...</Label>
            <Entry x:Name="PhoneUpdate" BackgroundColor="LightCoral" Placeholder="Phone" />
            <Label x:Name="DetailsAddress" >Loading...</Label>
            <Entry x:Name="AddressUpdate" BackgroundColor="LightCoral" Placeholder="Address" />
            <Label x:Name="DetailsDepartment" >Loading...</Label>
            <Entry x:Name="DepartmentUpdated" BackgroundColor="LightCoral" Placeholder="DEPARTMENT" />

                <Button Clicked="Button_Clicked" BackgroundColor="LightCoral" Text="UPDATE"></Button>
                <Button Clicked="Button_Clicked_1" BackgroundColor="LightCoral" Text="DELETE"></Button>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>